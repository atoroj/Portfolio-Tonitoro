---
import SocialPill from './shared/SocialPill.astro';
import GithubIcon from './icons/GithubIcon.astro';
import EmailIcon from './icons/EmailIcon.astro';
import LinkedInIcon from './icons/LinkedinIcon.astro';
import Section from "./shared/Section.astro";
import { getLangFromUrl, useTranslations } from '../i18n/utils';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const meDescription = t('me_text');
---
<section id="me" class="section text-center">
    <div class="flex justify-center">
        <img
            src="/images/atorojaen.jpg"
            alt="Antonio Toro Jaén"
            class="rounded-full w-48 h-48 mb-6 shadow-2xl"
        />
    </div>
    <h1 class="text-5xl mb-6 text-slate-900 dark:text-slate-50">
        Antonio Toro Jaén
    </h1>
    <hr class="mx-auto w-2xs border-t mb-6 border-slate-400" />
    <p class="mb-6 text-slate-900 dark:text-slate-50 text-justify text-pretty">
        {meDescription}
    </p>
    <div class="flex justify-center">
        <ul>
            <li class="flex gap-4">
                <SocialPill href="https://github.com/atoroj">
                    <GithubIcon class="w-4 h-4"/> <p class="text-sm">GitHub</p>
                </SocialPill>
                <SocialPill href="https://www.linkedin.com/in/antoniotorojaen/">
                    <LinkedInIcon class="w-4 h-4" /> <p class="text-sm">LinkedIn</p>
                </SocialPill>
                <SocialPill href="mailto:atorojaen@gmail.com" target="_blank" rel="noopener noreferrer">
                    <EmailIcon class="w-4 h-4"/><p class="text-sm">Email</p>
                </SocialPill>   
            </li> 
        </ul>
    </div>
</section>
