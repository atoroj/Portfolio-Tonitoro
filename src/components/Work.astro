---
import TimeLine from "./shared/TimeLine.astro";
import TimeLineItem from "./shared/TimeLineItem.astro";
import Section from "./shared/Section.astro";
import { getLangFromUrl, useTranslations } from '../i18n/utils';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Section title={t('work')} id="work">
    <TimeLine>
        <TimeLineItem
            date="2019-2020"
            title={t('work_fujitsu')}
            sitename="Fujitsu Technology Solutions - Sevilla"
            description={t('work_fujitsu_description')}
            tech={["Microservices", "Docker", "Kubernetes"]}
        />
        <TimeLineItem
            date={`2025-${t('present')}`}
            title={t('work_tragsatec')}
            sitename="Tragsatec - Sevilla"
            description={t('work_tragsatec_description')}
        />
    </TimeLine>