---
import TimeLine from "./shared/TimeLine.astro";
import TimeLineItem from "./shared/TimeLineItem.astro";
import Section from "./shared/Section.astro";
import { getLangFromUrl, useTranslations } from '../i18n/utils';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Section title={t('work')} id="work">
    <TimeLine>
        <TimeLineItem
            date="2017"
            title={t('work_pielubrique')}
            sitename="Piel de Ubrique - Ubrique, Cádiz"
            description={t('work_pielubrique_description')}
        />
        <TimeLineItem
            date="2019-2020"
            title={t('work_fujitsu')}
            sitename="Fujitsu Technology Solutions - Sevilla"
            description={t('work_fujitsu_description')}
            tech={["Microservices", "Docker", "Kubernetes"]}
        />
        <TimeLineItem
            date="2023-2024"
            title={t('work_mode')}
            sitename="Vending Romero Ramos - Ubrique, Cádiz"
            description={t('work_mode_description')}
        />
    </TimeLine>